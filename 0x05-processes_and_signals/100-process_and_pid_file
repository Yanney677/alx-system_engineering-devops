#!/usr/bin/env bash
# A bash script that:
#   Create a file /var/run/myscript.pid containing the script PID.
#   Displays "To infinity and beyond" indefinitely
#   Displays "I hate the kill command" upon receiving a SIGTERM
#   Displays "Y U no love me?!" upon receiving a SIGINT
#   Deletes the file /var/run/myscript.pid and terminates upon
#   receiving a SIGQUIT or SIGTERM.

#!/usr/bin/env bash

# Function to respond to SIGTERM
handle_sigterm() {
    echo "I hate the kill command"
    cleanup_and_exit
}

# Function to respond to SIGINT
handle_sigint() {
    echo "Y U no love me?!"
}

# Function to cleanup and exit
cleanup_and_exit() {
    echo "Cleaning up and exiting"
    rm -f /var/run/myscript.pid
    exit 0
}

# Trap signals and associate them with the respective functions
trap 'handle_sigterm' SIGTERM
trap 'handle_sigint' SIGINT
trap 'cleanup_and_exit' SIGQUIT

# Get the script's PID and write it to the PID file
echo $$ > /var/run/myscript.pid

# Main loop
while true; do
    echo "To infinity and beyond"
    sleep 2
done

